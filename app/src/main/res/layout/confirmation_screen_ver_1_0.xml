<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/SMJBackground">

    <include
        layout="@layout/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10sp" />

    <LinearLayout
        android:id="@+id/routeLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/displayRouteNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Route Number:"
            android:textColor="@color/SMJTextBlue"
            android:textSize="20sp" />

        <Space
            android:layout_width="5sp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/displayRouteNumberInputTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/SMJTextBlue"
            android:textSize="20sp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10sp" />

    <LinearLayout
        android:id="@+id/customerNameLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/displayCustomerNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Customer Name:"
            android:textColor="@color/SMJTextBlue"
            android:textSize="20sp" />

        <Space
            android:layout_width="5sp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/displayCustomerNameInputTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/SMJTextBlue"
            android:textSize="20sp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10sp" />

    <LinearLayout
        android:id="@+id/customerAccountNumberLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/displayCustomerAccountTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Customer Acc. No:"
            android:textColor="@color/SMJTextBlue"
            android:textSize="20sp" />

        <Space
            android:layout_width="5sp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/displayCustomerAccountInputTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/SMJTextBlue"
            android:textSize="20sp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10sp" />

    <LinearLayout
        android:id="@+id/itemNameLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/displayItemNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Item Name:"
            android:textColor="@color/SMJTextBlue"
            android:textSize="20sp" />

        <Space
            android:layout_width="5sp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/displayItemNameInputTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/SMJTextBlue"
            android:textSize="20sp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10sp" />

    <LinearLayout
        android:id="@+id/itemBrandLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/displayItemBrandTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Item Brand:"
            android:textColor="@color/SMJTextBlue"
            android:textSize="20sp" />

        <Space
            android:layout_width="5sp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/displayItemBrandInputTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/SMJTextBlue"
            android:textSize="20sp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10sp" />

    <LinearLayout
        android:id="@+id/itemPackSizeLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/displayItemPackSizeTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Item Pack Size:"
            android:textColor="@color/SMJTextBlue"
            android:textSize="20sp" />

        <Space
            android:layout_width="5sp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/displayItemPackSizeInputTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/SMJTextBlue"
            android:textSize="20sp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10sp" />

    <LinearLayout
        android:id="@+id/itemFlavorLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/displayItemFlavorTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Item Flavor:"
            android:textColor="@color/SMJTextBlue"
            android:textSize="20sp" />

        <Space
            android:layout_width="5sp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/displayItemFlavorInputTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/SMJTextBlue"
            android:textSize="20sp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10sp" />

    <LinearLayout
        android:id="@+id/numberOfCasesLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/displayNoOfCasesTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Num. of Cases:"
            android:textColor="@color/SMJTextBlue"
            android:textSize="20sp" />

        <Space
            android:layout_width="5sp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/displayNoOfCasesInputTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/SMJTextBlue"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>