<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/SMJBackground">

    <include
        layout="@layout/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp" />

            <LinearLayout
                android:id="@+id/routeLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/displayRouteNumberTextView"
                    android:layout_width="155sp"
                    android:layout_height="match_parent"
                    android:text="Route Number:"
                    android:textColor="@color/SMJTextBlue"
                    android:textSize="20sp"
                    android:layout_marginLeft="5sp"
                    />

                <Space
                    android:layout_width="5sp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/displayRouteNumberInputEditTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/GhostWhite"
                    android:textColor="@color/SMJTextBlue"
                    android:textSize="20sp"
                    android:layout_marginRight="5sp"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp" />

            <LinearLayout
                android:id="@+id/customerNameLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/displayCustomerNameTextView"
                    android:layout_width="155sp"
                    android:layout_height="wrap_content"
                    android:text="Customer Name:"
                    android:textColor="@color/SMJTextBlue"
                    android:textSize="20sp"
                    android:layout_marginLeft="5sp"/>

                <Space
                    android:layout_width="5sp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/displayCustomerNameInputEditTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/GhostWhite"
                    android:textColor="@color/SMJTextBlue"
                    android:textSize="20sp"
                    android:layout_marginRight="5sp"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp" />

            <LinearLayout
                android:id="@+id/customerAccountNumberLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/displayCustomerAccountTextView"
                    android:layout_width="155sp"
                    android:layout_height="wrap_content"
                    android:text="Customer Acc.\nNo:"
                    android:textColor="@color/SMJTextBlue"
                    android:textSize="20sp"
                    android:layout_marginLeft="5sp"/>

                <Space
                    android:layout_width="5sp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/displayCustomerAccountInputEditTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/GhostWhite"
                    android:textColor="@color/SMJTextBlue"
                    android:textSize="20sp"
                    android:layout_marginRight="5sp"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp" />

            <LinearLayout
                android:id="@+id/itemNameLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/displayItemNameTextView"
                    android:layout_width="155sp"
                    android:layout_height="match_parent"
                    android:text="Product Name:"
                    android:textColor="@color/SMJTextBlue"
                    android:textSize="20sp"
                    android:layout_marginLeft="5sp"/>

                <Space
                    android:layout_width="5sp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/displayItemNameInputEditTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/GhostWhite"
                    android:textColor="@color/SMJTextBlue"
                    android:textSize="20sp"
                    android:layout_marginRight="5sp"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp" />

            <LinearLayout
                android:id="@+id/itemBrandLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/displayItemBrandTextView"
                    android:layout_width="155sp"
                    android:layout_height="match_parent"
                    android:text="Product Brand:"
                    android:textColor="@color/SMJTextBlue"
                    android:textSize="20sp"
                    android:layout_marginLeft="5sp"/>

                <Space
                    android:layout_width="5sp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/displayItemBrandInputEditTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/GhostWhite"
                    android:textColor="@color/SMJTextBlue"
                    android:textSize="20sp"
                    android:layout_marginRight="5sp"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp" />

            <LinearLayout
                android:id="@+id/itemPackSizeLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/displayItemPackSizeTextView"
                    android:layout_width="155sp"
                    android:layout_height="match_parent"
                    android:text="Product Pack Size:"
                    android:textColor="@color/SMJTextBlue"
                    android:textSize="20sp"
                    android:layout_marginLeft="5sp"/>

                <Space
                    android:layout_width="5sp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/displayItemPackSizeInputEditTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/GhostWhite"
                    android:textColor="@color/SMJTextBlue"
                    android:textSize="20sp"
                    android:layout_marginRight="5sp"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp" />

            <LinearLayout
                android:id="@+id/itemFlavorLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/displayItemFlavorTextView"
                    android:layout_width="155sp"
                    android:layout_height="match_parent"
                    android:text="Product Flavor:"
                    android:textColor="@color/SMJTextBlue"
                    android:textSize="20sp"
                    android:layout_marginLeft="5sp"/>

                <Space
                    android:layout_width="5sp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/displayItemFlavorInputEditTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/GhostWhite"
                    android:textColor="@color/SMJTextBlue"
                    android:textSize="20sp"
                    android:layout_marginRight="5sp"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp" />

            <LinearLayout
                android:id="@+id/numberOfCasesLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/displayNoOfCasesTextView"
                    android:layout_width="155sp"
                    android:layout_height="match_parent"
                    android:text="Num. of Cases:"
                    android:textColor="@color/SMJTextBlue"
                    android:textSize="20sp"
                    android:layout_marginLeft="5sp"/>

                <Space
                    android:layout_width="5sp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/displayNoOfCasesInputEditTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/GhostWhite"
                    android:textColor="@color/SMJTextBlue"
                    android:textSize="20sp"
                    android:layout_marginRight="5sp"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="215sp"/>

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/rounded_button"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:text="Submit"
            android:textSize="24sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/tempSaveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/rounded_button"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:text="Add New Entry"
            android:textSize="24sp" />
    </LinearLayout>


</LinearLayout>
